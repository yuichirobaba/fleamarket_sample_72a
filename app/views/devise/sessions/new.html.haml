= render 'layouts/sellheader'
.single-main
  .login-panel
    .login-no-account
      %br/
      アカウントをお持ちでない方はこちら
      .login-no-account__new-account
        = link_to new_create_user_registration_path do
          %span.new-account-text
            新規会員登録
    .login-form-inner
      .login-form-inner__google
        %i.fab.fa-google-square.google-icon
        %span.google-text
          =icon('fab','google',class: 'google-icon')
          = link_to 'Googleでログイン', create_user_google_oauth2_omniauth_authorize_path, method: :post
          
      .login-form-inner__facebook
        %i.fab.fa-facebook-plus.facebook-icon
        %span.facebook-text
          =icon('fab','facebook-square',class: 'icon')
          = link_to 'Facebookでログイン', create_user_facebook_omniauth_authorize_path, method: :post
          
      .login-form-inner__apple
        %i.fab.fa-apple-plus.apple-icon
        %span.apple-text
          =icon('fab','apple', class: 'icon')
          Appleでログイン
    .form-group
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-group__email
          = f.email_field :email, autocomplete: "email",placeholder:"メールアドレス"
        .form-group__password
          = f.password_field :password, autocomplete: "current-password",placeholder:"パスワード"
          = f.submit "ログイン", class: "form-group__login-btn"
            
= render 'layouts/sellfooter'